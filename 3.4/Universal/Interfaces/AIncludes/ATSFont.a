kATSOptionFlagsDefault			EQU		0
kATSOptionFlagsComposeFontPostScriptName EQU $01			; ATSFontGetPostScriptName 
kATSOptionFlagsUseDataForkAsResourceFork EQU $0100			; ATSFontActivateFromFileSpecification 
kATSOptionFlagsUseResourceFork	EQU		$0200
kATSOptionFlagsUseDataFork		EQU		$0300

kATSIterationCompleted			EQU		-980
kATSInvalidFontFamilyAccess		EQU		-981
kATSInvalidFontAccess			EQU		-982
kATSIterationScopeModified		EQU		-983
kATSInvalidFontTableAccess		EQU		-984
kATSInvalidFontContainerAccess	EQU		-985
; typedef UInt32 						ATSFontContext


kATSFontContextUnspecified		EQU		0
kATSFontContextGlobal			EQU		1
; typedef UInt32 						ATSFontFormat


kATSFontFormatUnspecified		EQU		0





kATSFontFilterCurrentVersion	EQU		0

; typedef long							ATSFontFilterSelector
kATSFontFilterSelectorUnspecified EQU	0
kATSFontFilterSelectorGeneration EQU	3
kATSFontFilterSelectorFontFamily EQU	7
kATSFontFilterSelectorFontFamilyApplierFunction EQU 8
kATSFontFilterSelectorFontApplierFunction EQU 9
ATSFontFilter			RECORD 0
version					 ds.l	1				; offset: $0 (0)
filterSelector			 ds.l	1				; offset: $4 (4)
generationFilter		 ds.l	1				; offset: $8 (8)
						 ORG 8
fontFamilyFilter		 ds.l	1				; offset: $8 (8)
						 ORG 8
fontFamilyApplierFunctionFilter  ds.l 1			; offset: $8 (8)
						 ORG 8
fontApplierFunctionFilter  ds.l	1				; offset: $8 (8)
sizeof					 EQU *					; size:   $C (12)
						ENDR

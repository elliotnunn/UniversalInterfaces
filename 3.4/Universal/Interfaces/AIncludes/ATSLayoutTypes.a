;  Miscellaneous constants 

kATSUseLineHeight				EQU		$7FFFFFFF			; assignment to use natural line ascent/descent values 
kATSNoTracking					EQU		$80000000			; negativeInfinity 
; typedef UInt32 						ATSLineLayoutOptions


kATSLineNoLayoutOptions			EQU		$00000000			; no options 
kATSLineIsDisplayOnly			EQU		$00000001			; specifies to optimize for displaying text only 
kATSLineHasNoHangers			EQU		$00000002			; specifies that no hangers to be formed on the line 
kATSLineHasNoOpticalAlignment	EQU		$00000004			; specifies that no optical alignment to be performed on the line 
kATSLineKeepSpacesOutOfMargin	EQU		$00000008			; specifies that space charcters should not be treated as hangers 
kATSLineNoSpecialJustification	EQU		$00000010			; specifies no post-compensation justification is to be performed 
kATSLineLastNoJustification		EQU		$00000020			; specifies that if the line is the last of a paragraph, it will not get justified 
kATSLineFractDisable			EQU		$00000040			; specifies that the displayed line glyphs will adjust for device metrics 
kATSLineImposeNoAngleForEnds	EQU		$00000080			; specifies that the carets at the ends of the line will be guarenteed to be perpendicular to the baseline 
kATSLineFillOutToWidth			EQU		$00000100			; highlights for the line end characters will be extended to 0 and the specified line width 
kATSLineTabAdjustEnabled		EQU		$00000200			; specifies that the tab character width will be automatically adjusted to fit the specified line width 
kATSLineAppleReserved			EQU		$FFFFFC00			; these bits are reserved by Apple and will result in a invalid value error if attemped to set 

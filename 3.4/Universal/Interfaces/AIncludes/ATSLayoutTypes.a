kATSStyleNoOptions				EQU		$00000000			; no options 
kATSStyleApplyHints				EQU		$00000001			; specifies that ATS produce "hinted" glyph outlines (default is on) 
															;    kATSStyleApplyAntiAliasing           = 0x00000002L,  /* specifies that ATS produce antialiased glyph images (default is on) future feature */
